<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h1 style="color: black;">Validación de email</h1>
            </div>
            <img src="/img/logo.png" class="rounded-cirlce mx-auto d-block m-4 logo" alt="Logo">
            <div class="card-body">
                <form action="/users/authentication" method="POST">
                    <div class="form-group mb-4">
                        <input type="email" class="form-control" name="email" placeholder="Email:" autofocus>
                    </div>
                    <div class="form-group mb-4">
                        <input type="codeAuth" name="codeAuth" class="form-control" placeholder="Codigo de verificación:">
                    </div>
                    <div class="d-grid gap-1">
                        <button type="submit" class="btn btn-primary btn-block">Autenticar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>