<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card" style="width: auto;">
                <div class="card-body" >
                    <h4 style="color: black;" class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p style="color: black;">{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <div class="d-grid gap-1">
                            <button class="btn btn-danger btn-block btn-sm" type="submit">Borrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {{else}}
    <div class="card text-center mx-auto" style="width: auto;">
        <div class="card-body">
            <p class="lead" style="color: black;">No hay notas aun.</p>
            <a href="/notes/add" class="btn btn-success btn-block">Crea una!</a>
        </div>
    </div>

    {{/each}}
</div>